{ config, lib, pkgs, modulesPath, ... }:

{
  imports = [ (modulesPath + "/installer/scan/not-detected.nix") ];

  boot.initrd.availableKernelModules = [ "xhci_pci" "ahci" "nvme" "usbhid" ];
  boot.initrd.kernelModules = [ "i915" ];
  boot.kernelModules = [ "kvm-intel" ];

  # efi partition
  fileSystems."/boot" =
    { device = "/dev/disk/by-id/nvme-Seagate_FireCuda_530_ZP4000GM30013_7VS01VBM-part1";
      fsType = "vfat";
      neededForBoot = true;
    };

  # vms
  fileSystems."/home/cullmann/vms" =
    { device = "vpool/vms";
      fsType = "zfs";
      depends = [ "/home" ];
    };

  # projects
  fileSystems."/home/cullmann/projects" =
    { device = "ppool/projects";
      fsType = "zfs";
      depends = [ "/home" ];
    };

  nixpkgs.hostPlatform = lib.mkDefault "x86_64-linux";
  hardware.cpu.intel.updateMicrocode = lib.mkDefault config.hardware.enableRedistributableFirmware;

  # intel graphics
  hardware.graphics.extraPackages = with pkgs; [ intel-media-driver intel-compute-runtime ];
}
